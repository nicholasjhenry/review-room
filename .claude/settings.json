{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/script/claude"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(mise *)",
      "Bash(mix *)",
      "Bash(script/*)",
      "Read(**/*)",
      "Write(**/*)",
      "Glob(**/*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Write(.env)",
      "Write(.env.*)"
    ]
  }
}
