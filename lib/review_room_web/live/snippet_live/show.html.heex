<section id="snippet-show" class="mx-auto max-w-3xl px-4 py-6">
  <header class="mb-6 space-y-1">
    <h1 class="text-3xl font-semibold">{@display_title}</h1>
    <p
      :if={@snippet.description not in [nil, ""]}
      id="snippet-description"
      class="text-base text-base-content/80"
    >
      {@snippet.description}
    </p>
    <p class="text-base text-base-content/70">
      Language: {@language_label}
    </p>
    <div
      :if={Enum.any?(@snippet.tags)}
      id="snippet-tags"
      class="mt-3 flex flex-wrap gap-2"
    >
      <span
        :for={tag <- @snippet.tags}
        class="badge badge-outline"
        data-tag={tag}
      >
        {tag}
      </span>
    </div>
  </header>

  <div
    id="snippet-display"
    phx-hook="SyntaxHighlighter"
    phx-update="ignore"
    class="rounded-lg border border-base-300 bg-base-200"
  >
    <pre class="overflow-x-auto p-4 text-sm">
      <code id="snippet-code" data-language={@snippet.language} class="block whitespace-pre">
{@snippet.code}
      </code>
    </pre>
  </div>
</section>
